{
  "info": {
    "name": "SpaceLink Enterprise Gateway",
    "description": "Complete API collection for SpaceLink Enterprise Gateway",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "ok_device_001_abc123xyz",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login - Get Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 200\", function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"access_token\", jsonData.access_token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "username",
                  "value": "enterprise_admin"
                },
                {
                  "key": "password",
                  "value": "admin123"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/v1/auth/token",
              "host": ["{{base_url}}"],
              "path": ["v1", "auth", "token"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/auth/me",
              "host": ["{{base_url}}"],
              "path": ["v1", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Telemetry",
      "item": [
        {
          "name": "Send Telemetry (API Key)",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"device_id\": \"device-001\",\n  \"organization\": \"ACME Corporation\",\n  \"timestamp\": \"2024-01-04T12:00:00Z\",\n  \"latitude\": 47.6062,\n  \"longitude\": -122.3321,\n  \"signal_strength\": -68.5,\n  \"latency_ms\": 45.5,\n  \"packet_loss_percent\": 0.2,\n  \"throughput_mbps\": 120.5,\n  \"jitter_ms\": 2.1,\n  \"status\": \"active\",\n  \"firmware_version\": \"v2.4.1\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/v1/telemetry/send",
              "host": ["{{base_url}}"],
              "path": ["v1", "telemetry", "send"]
            }
          }
        },
        {
          "name": "Query Telemetry",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/v1/telemetry/?limit=100",
              "host": ["{{base_url}}"],
              "path": ["v1", "telemetry", ""],
              "query": [
                {
                  "key": "limit",
                  "value": "100"
                }
              ]
            }
          }
        },
        {
          "name": "Get Latest Telemetry",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/v1/telemetry/latest",
              "host": ["{{base_url}}"],
              "path": ["v1", "telemetry", "latest"]
            }
          }
        },
        {
          "name": "Get Telemetry Summary",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/v1/telemetry/stats/summary",
              "host": ["{{base_url}}"],
              "path": ["v1", "telemetry", "stats", "summary"]
            }
          }
        }
      ]
    },
    {
      "name": "Networks",
      "item": [
        {
          "name": "Create Network",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Primary WAN\",\n  \"organization\": \"ACME Corporation\",\n  \"network_type\": \"satellite\",\n  \"description\": \"Primary satellite WAN connection\",\n  \"sla_uptime_target\": 99.9,\n  \"sla_latency_target\": 100.0\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/v1/networks/",
              "host": ["{{base_url}}"],
              "path": ["v1", "networks", ""]
            }
          }
        },
        {
          "name": "List Networks",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/v1/networks/",
              "host": ["{{base_url}}"],
              "path": ["v1", "networks", ""]
            }
          }
        }
      ]
    }
  ]
}
